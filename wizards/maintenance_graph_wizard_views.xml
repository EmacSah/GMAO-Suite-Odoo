<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Dans le fichier views/maintenance_graph_wizard_views.xml -->
    <record id="view_maintenance_graph_wizard_form" model="ir.ui.view">
        <field name="name">maintenance.graph.wizard.form</field>
        <field name="model">maintenance.graph.wizard</field>
        <field name="arch" type="xml">
            <form string="Personnaliser le graphique">
                <group>
                    <field name="measure"/>
                    <field name="groupby"/>
                    <field name="graph_type"/>
                </group>
                <footer>
                    <button string="Appliquer" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>